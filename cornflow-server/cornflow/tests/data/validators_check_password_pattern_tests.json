[
    {
        "input": "Valid1!",
        "expected": [
            true,
            null
        ],
        "check": "equals",
        "error_message": "Valid password should pass"
    },
    {
        "input": null,
        "expected": [
            true,
            null
        ],
        "check": "equals",
        "error_message": "None password should pass (LDAP compatibility)"
    },
    {
        "input": "abc",
        "expected": [
            false,
            "Password must contain at least 5 characters."
        ],
        "check": "equals",
        "error_message": "Too short password should fail"
    },
    {
        "input": "password1!",
        "expected": [
            false,
            "Password must contain uppercase and lowercase letters."
        ],
        "check": "equals",
        "error_message": "All lowercase password should fail"
    },
    {
        "input": "PASSWORD1!",
        "expected": [
            false,
            "Password must contain uppercase and lowercase letters."
        ],
        "check": "equals",
        "error_message": "All uppercase password should fail"
    },
    {
        "input": "Password!",
        "expected": [
            false,
            "Password must contain at least one number and one special character."
        ],
        "check": "equals",
        "error_message": "Password without numbers should fail"
    },
    {
        "input": "Password1",
        "expected": [
            false,
            "Password must contain at least one number and one special character."
        ],
        "check": "equals",
        "error_message": "Password without special characters should fail"
    }
]